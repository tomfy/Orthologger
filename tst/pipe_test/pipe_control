# output directories
blastout_dir            blast_out  # for m8 files
fam_abcs_dir            fam_abcs
fam_fastas_dir          fam_fastas
alignments_dir          alignments
cleaned_alignments_dir  cleaned_alignments
newick_trees_dir        newick_trees  

#
n_pieces  2  # number of pieces to divide query file into (should be <= number of processors available)

# blast control parameters 
max_matches    500    # keep no more than this number of matches for each query sequence
blast_max_e_value    1e-12    # keep matches with e-value <= this

# family parameters:
family_size_limit   100
family_max_e_value  1e-20
family_taxon_requirement 'few,3' 

# other params
alignment_program both
alignment_quality quick
